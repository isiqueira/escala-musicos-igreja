generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Church {
  id                 String             @id @default(uuid())
  name               String             @unique
  description        String?
  address            String?
  schedules          Schedule[]
  recurringSchedules RecurringSchedule[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@map("churches")
}

model Schedule {
  id          String     @id @default(uuid())
  date        DateTime
  description String?
  church      Church     @relation(fields: [churchId], references: [id])
  churchId    String
  musicians   Musician[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([date])
  @@map("schedules")
}

model RecurringSchedule {
  id          String     @id @default(uuid())
  dayOfWeek   Int        @default(0) // 0=Domingo, 6=SÃ¡bado
  frequency   Frequency  @default(WEEKLY)
  description String?
  church      Church     @relation(fields: [churchId], references: [id])
  churchId    String
  musicians   Musician[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("recurring_schedules")
}

model Musician {
  id                 String             @id @default(uuid())
  name               String
  email              String             @unique
  instruments        String[]           @default([])
  schedules          Schedule[]
  recurringSchedules RecurringSchedule[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@map("musicians")
}

enum Frequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
}